#include<iostream>
using namespace std;

int main(){

  int n;
  cin >> n;
  for (int i = 1; i <= n; i++) {
    for (int j = i; j < n; j++) {
      cout << " ";
    }

    int num = i;
    for (int k = 1; k <= i; k++) {
      cout << num;
      num++;
    }
    int num2 = i;
    int k = num2;
    for (int j = 1; j <= i - 1; j++) {
      cout << k+i-2;
      k--;
    }
    num2 += 2;

    cout << endl;
  }
}
